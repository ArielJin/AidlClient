            android:ems="10"
            tools:layout_editor_absoluteY="331dp" tools:layout_editor_absoluteX="39dp" android:id="@+id/editText2"
            tools:ignore="MissingConstraints"/>
    <TextView
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="355dp"
            android:id="@+id/textView" tools:ignore="MissingConstraints"
            android:layout_marginLeft="21dp" android:layout_marginStart="21dp"
            app:layout_constraintStart_toEndOf="@+id/editText2"/>
    <EditText
            android:layout_width="91dp"
            android:layout_height="59dp"
            android:inputType="number"
            android:ems="10"
            tools:layout_editor_absoluteY="328dp"
            android:id="@+id/editText3" tools:ignore="MissingConstraints" android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp" app:layout_constraintStart_toEndOf="@+id/textView"/>
    <TextView
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="356dp"
            android:id="@+id/textView2" tools:ignore="MissingConstraints"
